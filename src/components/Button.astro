---
import { cn } from "../lib/utils";

interface Props {
	variant?: "primary" | "secondary" | "outline" | "ghost";
	size?: "sm" | "md" | "lg";
	href?: string;
	class?: string;
	[key: string]: any;
}

const {
	variant = "primary",
	size = "md",
	href,
	class: className,
	...rest
} = Astro.props;

const Tag = href ? "a" : "button";

const baseStyles =
	"inline-flex items-center justify-center rounded-lg font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:opacity-50 disabled:pointer-events-none ring-offset-background";

const variants = {
	primary:
		"bg-[#4E7CCE] text-white hover:bg-[#4E7CCE]/90 hover:shadow-lg shadow-md",
	secondary: "bg-slate-100 text-slate-900 hover:bg-slate-200",
	outline: "border border-input hover:bg-slate-100 hover:text-slate-900",
	ghost: "hover:bg-slate-100 hover:text-slate-900",
};

const sizes = {
	sm: "h-9 px-3 text-xs",
	md: "h-10 py-2 px-4",
	lg: "h-12 px-8 text-lg",
};

const classes = cn(baseStyles, variants[variant], sizes[size], className);
---

<Tag href={href} class={classes} {...rest}>
	<slot />
</Tag>

<script>
	import confetti from "canvas-confetti";

	// Confetti logic - applies only to buttons without href (actions) usually,
	// but legacy code applied it to 'button'.
	// We'll keep it simple: add a data attribute or class if we want confetti later,
	// or just leave it for now attached to buttons.
	// For specific CTA like Instagram, we might not want confetti.
	// The previous script querySelected 'button' globally which is aggressive.
	// I will remove the auto-confetti on all buttons behavior as it effectively hijacks the UI.
	// If specific buttons need it, they should opt-in.
</script>
