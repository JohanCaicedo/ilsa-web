---
// src/components/atoms/LiquidBackground.astro
interface Props {
    // 0 to 1 scale. 1 = standard refined intensity.
    intensity?: number;
}

const { intensity = 1 } = Astro.props;

// Reduced base opacity (0.15) for a very subtle, light effect
const baseOpacity = 0.05 * intensity;
---

<div class="fixed inset-0 -z-10 overflow-hidden bg-slate-50" transition:persist>
    <div class="relative w-full h-full">
        <!-- 
      Refined Palette:
      1. ILSA Blue (#4E7CCE)
      2. Feminist Violet (Purple/Violet)
      3. Nature Green (Emerald/Green)
    -->

        <!-- Blob 1: ILSA Blue (Top Left) -->
        <div
            class="absolute top-[-10%] left-[-10%] w-[50vw] h-[50vw] bg-[#4E7CCE] rounded-full mix-blend-multiply filter blur-[90px] animate-blob"
            style={`opacity: ${baseOpacity};`}
        >
        </div>

        <!-- Blob 2: Feminist Violet (Top Right) -->
        <div
            class="absolute top-[-10%] right-[-10%] w-[50vw] h-[50vw] bg-violet-500 rounded-full mix-blend-multiply filter blur-[90px] animate-blob animation-delay-2000"
            style={`opacity: ${baseOpacity};`}
        >
        </div>

        <!-- Blob 3: Nature Green (Bottom Left) -->
        <div
            class="absolute bottom-[-20%] left-[20%] w-[60vw] h-[60vw] bg-emerald-500 rounded-full mix-blend-multiply filter blur-[90px] animate-blob animation-delay-4000"
            style={`opacity: ${baseOpacity};`}
        >
        </div>

        <!-- Blob 4: Dynamic Center (Mixing Blue/Violet) -->
        <div
            class="absolute top-[40%] left-[40%] w-[35vw] h-[35vw] bg-indigo-300 rounded-full mix-blend-multiply filter blur-[70px] animate-blob"
            style={`opacity: ${baseOpacity * 0.8};`}
        >
        </div>
    </div>

    <!-- Noise Texture (Reduced opacity for cleaner look) -->
    <div
        class="absolute inset-0 opacity-[0.2] mix-blend-soft-light pointer-events-none"
        style="background-image: url('data:image/svg+xml,%3Csvg viewBox=%220 0 200 200%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cfilter id=%22noiseFilter%22%3E%3CfeTurbulence type=%22fractalNoise%22 baseFrequency=%220.65%22 numOctaves=%223%22 stitchTiles=%22stitch%22/%3E%3C/filter%3E%3Crect width=%22100%25%22 height=%22100%25%22 filter=%22url(%23noiseFilter)%22/%3E%3C/svg%3E');"
    >
    </div>
</div>
