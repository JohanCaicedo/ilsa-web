---
interface Props {
  direction: "left" | "right";
  id: string; // Necesitamos un ID para conectarlo al script
}

const { direction, id } = Astro.props;
const isLeft = direction === "left";
---

<button
  id={id}
  aria-label={isLeft ? "Anterior" : "Siguiente"}
  class="group flex h-10 w-10 items-center justify-center rounded-full border border-border bg-background shadow-sm transition-all hover:bg-muted hover:shadow-md active:scale-95 disabled:opacity-50"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="20"
    height="20"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class={`transition-transform duration-200 ${isLeft ? "" : "rotate-180"}`}
  >
    <path d="m15 18-6-6 6-6"></path>
  </svg>
</button>