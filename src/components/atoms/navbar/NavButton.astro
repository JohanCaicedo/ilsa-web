---
// src/components/atoms/navbar/NavButton.astro
interface Props {
    variant?: "primary" | "secondary";
    href?: string;
    class?: string;
}

const { variant = "secondary", href, class: className } = Astro.props;

const baseClasses =
    "px-4 py-2 rounded-full text-sm font-medium transition duration-300";

const variants = {
    primary:
        "bg-[#4a7dbf] hover:bg-[#375a9e] text-white shadow-[0px_0px_20px_5px_rgba(74,125,191,0.3)] hover:shadow-[0px_0px_25px_8px_rgba(74,125,191,0.5)] transition-all duration-300",
    secondary:
        "border border-slate-200 text-slate-600 hover:text-[#4a7dbf] hover:bg-slate-50 hover:border-[#4a7dbf]/30",
};

const Tag = href ? "a" : "button";
---

<Tag href={href} class:list={[baseClasses, variants[variant], className]}>
    <slot />
</Tag>
