---
// src/components/atoms/navbar/NavDropdown.astro
import LiquidContainer from "../../experimental/LiquidContainer.astro";
interface DropdownItem {
    label: string;
    href: string;
}

interface Props {
    text: string;
    items: DropdownItem[];
    href?: string;
}

const { text, items, href } = Astro.props;
const isLink = !!href;
---

<div class="relative group/dropdown h-full flex items-center">
    {
        isLink ? (
            <a
                href={href}
                class="flex items-center gap-1 relative transition-all duration-300 hover:text-[#4e7cce] hover:scale-110 transform origin-center font-medium cursor-pointer focus:outline-none"
            >
                <span class="relative">{text}</span>
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="w-3 h-3 transition-transform duration-300 group-hover/dropdown:rotate-180"
                >
                    <path d="m6 9 6 6 6-6" />
                </svg>
            </a>
        ) : (
            <button class="flex items-center gap-1 relative transition-all duration-300 hover:text-[#4e7cce] hover:scale-110 transform origin-center font-medium cursor-default focus:outline-none">
                <span class="relative">{text}</span>
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="w-3 h-3 transition-transform duration-300 group-hover/dropdown:rotate-180"
                >
                    <path d="m6 9 6 6 6-6" />
                </svg>
            </button>
        )
    }

    <!-- Dropdown Panel -->
    <div
        class="absolute top-full left-1/2 -translate-x-1/2 mt-4 w-64 opacity-0 invisible group-hover/dropdown:opacity-100 group-hover/dropdown:visible transition-all duration-300 transform translate-y-2 group-hover/dropdown:translate-y-0 z-50 pt-2"
    >
        <LiquidContainer
            class="p-2 flex flex-col gap-1 rounded-2xl shadow-xl shadow-slate-200/50 overflow-hidden"
            intensity="medium"
            frosted={true}
            clipContent={false}
            use3D={false}
        >
            {
                items.map((item) => (
                    <a
                        href={item.href}
                        class="block px-4 py-2.5 text-sm text-slate-800 hover:text-[#4a7dbf] hover:bg-slate-50/50 rounded-xl transition-all duration-200 font-medium relative z-10"
                    >
                        {item.label}
                    </a>
                ))
            }
        </LiquidContainer>
    </div>
</div>
