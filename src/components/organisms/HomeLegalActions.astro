---
import { cn } from "../../lib/utils";
import GradientText from "../atoms/GradientText.astro";
import LegalActionRow from "../molecules/LegalActionRow.astro";
import type { PostNode } from "../../lib/wp";
import Button from "../Button.astro";

interface Props {
    posts: PostNode[];
    class?: string;
}

const { posts, class: className } = Astro.props;
---

<section class={cn("relative w-full py-20 bg-transparent", className)}>
    <div
        class="absolute inset-0 z-0 pointer-events-none overflow-hidden"
        style="mask-image: radial-gradient(ellipse at center, black 30%, transparent 70%); -webkit-mask-image: radial-gradient(ellipse at center, black 30%, transparent 70%);"
    >
        <div
            class="absolute top-1/2 left-0 w-[500px] h-[500px] bg-[#4E7CCE]/20 rounded-full blur-[100px] -translate-x-1/2 -translate-y-1/2"
        >
        </div>
        <div
            class="absolute bottom-0 right-0 w-[600px] h-[600px] bg-[#5E3B69]/20 rounded-full blur-[120px] translate-x-1/3 translate-y-1/3"
        >
        </div>
    </div>

    <!-- Liquid Glass Container -->
    <div class="relative z-10 max-w-[1400px] mx-auto px-6">
        <div
            class="rounded-[2.5rem] bg-white/40 backdrop-blur-3xl border border-white/50 shadow-2xl p-8 md:py-16 md:px-24 overflow-hidden relative"
        >
            <!-- Frosty overlay within the card -->
            <div
                class="absolute inset-0 bg-gradient-to-br from-white/50 via-white/20 to-transparent opacity-70 pointer-events-none"
            >
            </div>

            <div class="relative z-10">
                <!-- Section Header -->
                <div
                    class="flex flex-col md:flex-row items-center justify-between gap-6 mb-12"
                >
                    <div class="text-center md:text-left">
                        <GradientText
                            text="Acciones Jurídicas"
                            size="text-3xl md:text-5xl"
                            weight="font-bold"
                            from="var(--ilsa-blue-dark)"
                            to="var(--ilsa-blue)"
                            class="mb-3 block w-fit mx-auto md:mx-0 text-center"
                        />
                        <p class="text-slate-600 max-w-lg text-lg font-medium">
                            Defensa de derechos humanos, litigio estratégico y
                            acompañamiento a comunidades.
                        </p>
                    </div>

                    <Button
                        href="/actividades"
                        variant="ghost"
                        class="hidden md:flex items-center gap-2 group hover:bg-white/50"
                    >
                        Ver todas las acciones
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="transition-transform group-hover:translate-x-1 group-active:translate-x-2"
                            ><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"
                            ></path></svg
                        >
                    </Button>
                </div>

                <!-- Cards Grid -->
                <!-- Actions List -->
                <div class="flex flex-col gap-4 max-w-4xl mx-auto">
                    {
                        posts.length > 0 ? (
                            posts.map((post) => (
                                <LegalActionRow
                                    title={post.title}
                                    link={post.uri}
                                    category={post.categories.nodes[0]?.name}
                                    date={new Date(
                                        post.date,
                                    ).toLocaleDateString("es-ES", {
                                        year: "numeric",
                                        month: "long",
                                        day: "numeric",
                                    })}
                                    class="w-full"
                                />
                            ))
                        ) : (
                            <div class="py-16 text-center text-slate-500 bg-white/40 backdrop-blur-sm rounded-3xl border border-dashed border-slate-300">
                                No hay acciones jurídicas recientes disponibles.
                            </div>
                        )
                    }
                </div>

                <!-- Mobile CTA -->
                <div class="mt-8 text-center md:hidden">
                    <Button
                        href="/actividades"
                        variant="outline"
                        class="w-full bg-white/50 border-white/40"
                    >
                        Ver todas las acciones
                    </Button>
                </div>
            </div>
        </div>
    </div>
</section>
