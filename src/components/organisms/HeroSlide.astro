---
import { cn } from "../../lib/utils";
import Button from "../Button.astro";
import SmartImage from "../atoms/SmartImage.astro";
import type { HeroSlideData } from "../../lib/hero";

// Extender la interfaz base para añadir props específicos de presentación
interface Props extends Omit<HeroSlideData, "link"> {
    link?: string; // Hacemos link opcional en el componente (fallback por defecto)
    isPriority?: boolean;
    class?: string;
}

const {
    title,
    excerpt,
    image,
    link = "/publicaciones",
    badge = "Novedad ILSA",
    ctaText = "Leer Artículo",
    isPriority = false,
    class: className,
} = Astro.props;
---

<div
    class={cn(
        "w-full flex-shrink-0 relative flex items-center justify-center py-20 lg:py-32 min-h-[750px] overflow-hidden select-none",
        className,
    )}
>
    <!-- Background removed as requested -->

    <div class="container relative z-10 w-full px-6 md:px-12 lg:px-20 mx-auto">
        <div
            class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-16 items-center"
        >
            <div
                class="lg:col-span-6 flex flex-col items-center lg:items-start text-center lg:text-left space-y-8"
            >
                <div
                    class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full border border-[#4E7CCE]/20 bg-white/40 backdrop-blur-md text-xs font-semibold text-[#4E7CCE] shadow-sm"
                >
                    <span class="relative flex h-2.5 w-2.5">
                        <span
                            class="animate-ping absolute inline-flex h-full w-full rounded-full bg-[#4E7CCE] opacity-75"
                        ></span>
                        <span
                            class="relative inline-flex rounded-full h-2.5 w-2.5 bg-[#4E7CCE]"
                        ></span>
                    </span>
                    <span>{badge}</span>
                </div>

                <h1
                    class="text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold text-slate-900 tracking-tight leading-[1.1] text-balance"
                >
                    <span
                        class="bg-clip-text text-transparent bg-gradient-to-r from-slate-900 via-slate-800 to-[#4E7CCE]"
                    >
                        {title}
                    </span>
                </h1>

                <p
                    class="text-lg md:text-xl text-slate-600 max-w-2xl leading-relaxed text-pretty"
                    set:html={excerpt}
                />

                <div
                    class="flex flex-wrap items-center justify-center lg:justify-start gap-4 pt-4"
                >
                    <Button
                        variant="primary"
                        href={link}
                        class="rounded-full px-8 h-12 shadow-lg shadow-[#4E7CCE]/20 hover:shadow-[#4E7CCE]/30"
                    >
                        {ctaText}
                    </Button>
                </div>
            </div>

            <div class="lg:col-span-6 w-full relative group perspective-1000">
                <div
                    class="relative z-10 w-full aspect-[4/3] rounded-3xl overflow-hidden border border-white/40 bg-white/20 backdrop-blur-xl shadow-2xl transition-transform duration-700 group-hover:rotate-y-2 group-hover:scale-[1.02]"
                >
                    <div
                        class="absolute inset-0 z-20 bg-gradient-to-br from-white/40 via-white/5 to-transparent opacity-50 pointer-events-none"
                    >
                    </div>

                    <SmartImage
                        src={image}
                        alt={title}
                        class="absolute inset-0 w-full h-full object-cover mix-blend-multiply data-[loaded=true]:opacity-95 group-hover:scale-105 transition-transform duration-700"
                        priority={isPriority}
                    />
                </div>

                <div
                    class="absolute -inset-4 bg-gradient-to-tr from-[#4E7CCE] to-[#5e3b69] rounded-3xl opacity-20 blur-2xl -z-10"
                >
                </div>
            </div>
        </div>
    </div>
</div>
