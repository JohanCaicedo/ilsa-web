---
// src/components/organisms/ImageGalleryHoveredContent.astro
import { cn } from "../../lib/utils";

interface GalleryItem {
    title: string;
    description: string;
    image: string;
}

interface Props {
    title?: string;
    description?: string;
    items?: GalleryItem[];
    className?: string;
}

const defaultItems: GalleryItem[] = [
    {
        title: "Justicia Climática",
        description:
            "Defensa territorial y protección de la biodiversidad en el Amazonas.",
        image: "https://api.ilsa.org.co/wp-content/uploads/2025/01/gallery-1.jpg",
    },
    {
        title: "Derechos Campesinos",
        description:
            "Fortalecimiento de las zonas de reserva campesina y soberanía alimentaria.",
        image: "https://api.ilsa.org.co/wp-content/uploads/2025/01/gallery-2.jpg",
    },
    {
        title: "Género y Justicia",
        description:
            "Investigación y acción participativa con mujeres rurales.",
        image: "https://api.ilsa.org.co/wp-content/uploads/2025/01/gallery-3.jpg",
    },
];

const {
    title = "Nuestra Praxis en Imágenes",
    description,
    items = defaultItems,
    className,
} = Astro.props;
---

<section class={cn("w-full py-12", className)}>
    {
        title && (
            <h2 class="text-3xl font-semibold text-center mx-auto text-slate-900 mb-2">
                {title}
            </h2>
        )
    }
    {
        description && (
            <p class="text-sm text-slate-500 text-center mb-10 max-w-lg mx-auto">
                {description}
            </p>
        )
    }

    <div
        class="flex flex-col md:flex-row items-center gap-6 h-auto md:h-[400px] w-full"
    >
        {
            items.map((item) => (
                <div class="relative group flex-grow transition-all w-full md:w-56 h-[400px] duration-500 md:hover:w-full overflow-hidden rounded-2xl border border-white/20 shadow-xl">
                    <img
                        class="h-full w-full object-cover object-center transition-transform duration-500 group-hover:scale-105"
                        src={item.image}
                        alt={item.title}
                    />
                    <div class="absolute inset-0 flex flex-col justify-end p-8 text-white bg-white/10 backdrop-blur-md opacity-0 group-hover:opacity-100 transition-all duration-300 border-t border-white/20">
                        <h3 class="text-2xl font-bold mb-2 drop-shadow-md">
                            {item.title}
                        </h3>
                        <p class="text-sm text-white/90 leading-relaxed drop-shadow-sm">
                            {item.description}
                        </p>
                    </div>
                </div>
            ))
        }
    </div>
</section>
