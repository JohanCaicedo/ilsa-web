---
interface Props {
    name: string;
    profileImage: string;
    coverImage: string;
    class?: string;
}

import SmartImage from "../atoms/SmartImage.astro";

const { name, profileImage, coverImage, class: className } = Astro.props;
---

<div
    class:list={[
        "relative aspect-square w-full rounded-3xl overflow-hidden shadow-[0_8px_30px_rgba(78,124,206,0.1)] hover:shadow-[0_15px_40px_rgba(78,124,206,0.25)] active:scale-95 transition-all duration-500 group border border-[var(--ilsa-blue)]/20 select-none cursor-pointer bg-white/5",
        className,
    ]}
>
    <!-- 1. BACKGROUND (Cover Image) -->
    <!-- Visible initially, stays as base layer -->
    <div class="absolute inset-0 z-0">
        <div
            class="w-full h-full opacity-90 transition-transform duration-700 group-hover:scale-110"
        >
            <SmartImage
                src={coverImage}
                alt=""
                class="w-full h-full object-cover"
            />
        </div>
        <!-- Blue-tinted overlay for branding -->
        <div class="absolute inset-0 bg-[#4E7CCE]/10 mix-blend-overlay"></div>
        <!-- Text contrast overlay -->
        <div class="absolute inset-0 bg-black/10 mix-blend-multiply"></div>
    </div>

    <!-- 2. FOREGROUND (Profile Image) - THE REVEAL -->
    <!-- Clipped to center initially, expands on hover -->
    <div
        class="absolute inset-0 z-10 transition-[clip-path] duration-700 ease-[cubic-bezier(0.16,1,0.3,1)]"
        style="clip-path: circle(0% at 50% 50%);"
    >
        <SmartImage
            src={profileImage}
            alt={name}
            class="w-full h-full object-cover"
        />
    </div>

    <!-- Hover State Trigger for Profile Expansion -->
    <style>
        .group:hover > div[style*="clip-path"] {
            clip-path: circle(150% at 50% 50%) !important;
        }
    </style>

    <!-- Gradient Overlay (Shared) -->
    <div
        class="absolute inset-0 bg-gradient-to-t from-[var(--ilsa-blue)]/80 via-transparent to-transparent opacity-40 group-hover:opacity-60 transition-opacity duration-300 z-20 pointer-events-none"
    >
    </div>

    <!-- Legend (Liquid Glass) -->
    <!-- Hidden by default (opacity-0, -translate-y-4), slides down on hover -->
    <div
        class="absolute bottom-4 left-4 right-4 z-30 pointer-events-none opacity-0 -translate-y-4 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-300 ease-[cubic-bezier(0.16,1,0.3,1)] delay-100"
    >
        <div
            class="flex items-center gap-3 border border-[var(--ilsa-blue)]/30 rounded-2xl bg-white/30 backdrop-blur-md p-3 shadow-[0_4px_20px_rgba(0,0,0,0.05)] pointer-events-auto transition-colors duration-300 hover:bg-white/50 ios-glass-fix"
        >
            <div class="flex flex-col min-w-0">
                <p
                    class="font-extrabold text-white text-md leading-tight truncate drop-shadow-md"
                >
                    {name}
                </p>
            </div>
            <div
                class="ml-auto w-8 h-8 flex-shrink-0 flex items-center justify-center bg-[var(--ilsa-blue)] text-white rounded-full transition-all duration-300 group-hover:rotate-45 group-hover:scale-110 shadow-sm"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-arrow-up-right"
                    ><path d="M7 7h10v10"></path><path d="M7 17 17 7"
                    ></path></svg
                >
            </div>
        </div>
    </div>
</div>
