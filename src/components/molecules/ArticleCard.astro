---
import {
  Card,
  CardContent,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import SmartImage from "../atoms/SmartImage.astro";

interface Props {
  title: string;
  excerpt: string;
  date: string;
  uri: string; // Usamos URI para el enlace completo
  category?: string;
  image?: string;
  readingTime?: number;
}

const {
  title,
  excerpt,
  date,
  uri,
  category = "Noticias",
  image,
  readingTime,
} = Astro.props;

const formattedDate = new Date(date).toLocaleDateString("es-CO", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<Card
  className="flex flex-col h-full hover:shadow-xl transition-all duration-300 border-slate-200/60 bg-white/80 backdrop-blur-sm group overflow-hidden"
>
  {
    image && (
      <div class="relative w-full h-48 overflow-hidden">
        <div class="absolute inset-0 bg-slate-900/10 group-hover:bg-transparent transition-colors z-10" />
        <SmartImage
          src={image}
          alt={title}
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
        />
      </div>
    )
  }

  <CardHeader className="pb-2">
    <div class="flex justify-between items-center mb-2">
      <Badge
        variant="secondary"
        className="text-xs bg-slate-100 text-slate-700 hover:bg-slate-200"
        >{category}</Badge
      >
      <div
        class="flex items-center gap-2 text-[10px] text-slate-500 font-medium uppercase tracking-wide"
      >
        <span>{formattedDate}</span>
        {
          readingTime && (
            <>
              <span>&bull;</span>
              <span>{readingTime} min</span>
            </>
          )
        }
      </div>
    </div>
    <CardTitle className="text-xl leading-tight font-bold text-slate-800">
      <a href={uri} class="hover:text-[#4E7CCE] transition-colors line-clamp-2">
        {title}
      </a>
    </CardTitle>
  </CardHeader>

  <CardContent className="flex-grow pt-0">
    <div
      class="text-sm text-slate-600 line-clamp-3 leading-relaxed"
      set:html={excerpt}
    />
  </CardContent>

  <CardFooter className="pt-2">
    <a href={uri} class="w-full group/btn">
      <Button
        variant="outline"
        className="w-full border-slate-200 text-slate-600 hover:text-[#4E7CCE] hover:border-[#4E7CCE]/30 hover:bg-[#4E7CCE]/5 transition-all"
      >
        Leer artículo
        <span class="ml-2 group-hover/btn:translate-x-1 transition-transform"
          >→</span
        >
      </Button>
    </a>
  </CardFooter>
</Card>
```
