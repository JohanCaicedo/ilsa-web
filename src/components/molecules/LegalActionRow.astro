---
import { cn } from "../../lib/utils";

interface Props {
    title: string;
    link: string;
    category?: string;
    date?: string;
    class?: string;
}

const { title, link, category = "Info", date, class: className } = Astro.props;
---

<a
    href={link}
    class={cn(
        "group flex items-center justify-between gap-4 border border-[#5E3B69]/20 rounded-full bg-white/40 backdrop-blur-md p-2 pl-6 text-sm text-slate-700 hover:bg-white/70 hover:shadow-lg hover:border-[#5E3B69]/40 transition-all duration-300 w-full",
        className,
    )}
>
    <div class="flex flex-col min-w-0 pr-4">
        <p class="font-medium truncate text-slate-800 text-sm md:text-md">
            {title}
        </p>
        {
            date && (
                <span class="text-xs text-slate-400 font-normal mt-0.5">
                    {date}
                </span>
            )
        }
    </div>

    <div
        class="flex-shrink-0 flex items-center justify-center bg-[#5E3B69] text-white border border-[#5E3B69] rounded-full p-3 group-hover:bg-[#4a2e52] transition-colors"
    >
        <svg
            width="20"
            height="20"
            viewBox="0 0 16 13"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
            class="transition-transform group-hover:translate-x-1"
        >
            <path
                d="M1 6.5h14M9.5 1 15 6.5 9.5 12"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
        </svg>
    </div>
</a>
