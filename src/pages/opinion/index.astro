---
import Layout from "../../layouts/Layout.astro";
import Breadcrumbs from "../../components/atoms/Breadcrumbs.astro";
import TeamCard from "../../components/molecules/TeamCard.astro";
import RelatedSlider from "../../components/organisms/RelatedSlider.astro";
import {
    fetchAllPosts, // Use fetchAllPosts
    type MasterQueryResponse,
    type PostNode,
} from "../../lib/wp";
import { authorsConfig } from "../../lib/authors";
import {
    columnistImages,
    defaultColumnistImage,
} from "../../lib/columnistImages";
import {
    HIDE_SENSITIVE_AUTHORS,
    SENSITIVE_AUTHORS,
} from "../../lib/presentationConfig";
import type { SeoData } from "../../lib/seo";
import WPLoader from "../../components/molecules/WPLoader.astro";

export const prerender = true;

const breadcrumbItems = [{ label: "Opinión", href: "/opinion" }];

// Fetch SEO and Post Data (Fetch ALL posts now)
const data: MasterQueryResponse = await fetchAllPosts();

// Filter opinion articles (assuming category slug is 'opinion') and limit to 20
const opinionArticles = (
    data?.posts?.nodes?.filter((post: PostNode) =>
        post.categories.nodes.some((cat) => cat.slug === "opinion"),
    ) || []
).slice(0, 20);

// Use SEO from the first post or a default (Ideally we'd fetch a specific page for SEO)
const seoData: SeoData = {
    title: "Opinión - Justicia y Derecho Alternativo | ILSA",
    metaDesc:
        "Columnas de opinión, análisis crítico y pensamiento jurídico emancipador en América Latina.",
};

// Columnists list from local config
const columnists = Object.values(authorsConfig);
---

<Layout seo={seoData} breadcrumbs={breadcrumbItems}>
    <div class="relative min-h-screen text-[#3d3d47] overflow-hidden font-sans">
        <!-- Global Atmosphere Gradients (Liquid Glass Base) -->
        <div class="fixed top-0 left-0 w-full h-full pointer-events-none z-0">
            <!-- Noise Overlay -->
            <div
                class="absolute inset-0 z-20 opacity-[0.03] mix-blend-overlay bg-[url('https://grainy-gradients.vercel.app/noise.svg')]"
            >
            </div>

            <div
                class="absolute top-[-20%] right-[-10%] w-[70%] h-[70%] bg-[#4e7cce]/10 rounded-full blur-[120px] animate-pulse duration-[8000ms]"
            >
            </div>
            <div
                class="absolute bottom-[-10%] left-[-10%] w-[60%] h-[60%] bg-[#5e3b69]/10 rounded-full blur-[120px] animate-pulse duration-[10000ms]"
            >
            </div>
        </div>

        <div
            class="relative z-10 pt-16 pb-24 px-6 md:px-12 max-w-7xl mx-auto flex flex-col gap-20"
        >
            <!-- HERO SECTION (Stagger 1) -->
            <section
                class="flex flex-col items-center text-center max-w-4xl mx-auto stagger-1"
            >
                <!-- Badge -->
                <div
                    class="inline-flex items-center gap-3 px-5 py-2.5 rounded-full bg-white/60 backdrop-blur-md border border-white/40 shadow-[0_2px_20px_rgba(78,124,206,0.1)] mb-10 transition-transform hover:scale-105"
                >
                    <span class="relative flex h-2.5 w-2.5">
                        <span
                            class="animate-ping absolute inline-flex h-full w-full rounded-full bg-[#4e7cce] opacity-30"
                        ></span>
                        <span
                            class="relative inline-flex rounded-full h-2.5 w-2.5 bg-[#4e7cce]"
                        ></span>
                    </span>
                    <span
                        class="text-xs font-bold text-[#4e7cce] uppercase tracking-[0.2em]"
                    >
                        Pensamiento Crítico
                    </span>
                </div>

                <!-- Headline -->
                <h1
                    class="text-5xl text-center md:text-8xl font-black text-[#3d3d47] mb-8 tracking-tighter leading-[0.95] drop-shadow-sm"
                >
                    Espacio de <br />
                    <span
                        class="bg-clip-text text-transparent bg-gradient-to-r from-[#4e7cce] to-[#5e3b69]"
                        >Opinión</span
                    >
                </h1>

                <!-- Lead -->
                <p
                    class="text-xl md:text-2xl text-[#3d3d47]/70 max-w-2xl mx-auto leading-relaxed text-balance font-medium"
                >
                    Análisis, debates y reflexiones sobre el derecho, la
                    justicia social y las luchas populares en el continente.
                </p>
            </section>

            <!-- COLUMNISTS SECTION (Stagger 2) -->
            <section class="stagger-2">
                <div class="text-center mb-16">
                    <h2
                        class="text-sm font-black text-[#3d3d47]/40 uppercase tracking-[0.3em] mb-4 text-center"
                    >
                        Nuestras Voces
                    </h2>
                </div>

                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto perspective-1000"
                >
                    {
                        Object.entries(authorsConfig)
                            .filter(
                                ([slug]) =>
                                    !HIDE_SENSITIVE_AUTHORS ||
                                    !SENSITIVE_AUTHORS.includes(slug),
                            )
                            .map(([slug, author]) => (
                                <a
                                    href={`/opinion/${slug}`}
                                    class="block h-full group transition-transform duration-500 hover:-translate-y-2"
                                >
                                    <TeamCard
                                        name={author.name}
                                        profileImage={
                                            (
                                                columnistImages[slug] ||
                                                defaultColumnistImage
                                            ).profile
                                        }
                                        coverImage={
                                            (
                                                columnistImages[slug] ||
                                                defaultColumnistImage
                                            ).cover
                                        }
                                        class="h-full group-hover:border-[#4e7cce]/50 group-hover:shadow-2xl group-hover:shadow-[#4e7cce]/10 transition-all duration-500"
                                    />
                                </a>
                            ))
                    }
                </div>
            </section>

            <!-- Divider -->
            <div
                class="w-full h-px bg-gradient-to-r from-transparent via-[#3d3d47]/10 to-transparent stagger-3"
            >
            </div>

            <!-- OPINION ARTICLES SECTION (Stagger 3) -->
            <section class="max-w-7xl mx-auto w-full stagger-3">
                <WPLoader type="card" minHeight="min-h-[200px]">
                    <div class="text-center mb-12">
                        <h2
                            class="text-sm font-black text-[#3d3d47]/40 uppercase tracking-[0.3em] mb-4 text-center"
                        >
                            Últimos Artículos
                        </h2>
                    </div>

                    {
                        opinionArticles.length > 0 ? (
                            <RelatedSlider posts={opinionArticles} />
                        ) : (
                            <div class="py-20 text-center rounded-3xl bg-white/30 border border-dashed border-slate-300">
                                <p class="text-[#3d3d47]/60 italic font-medium">
                                    No se encontraron artículos de opinión en
                                    este momento.
                                </p>
                            </div>
                        )
                    }
                </WPLoader>
            </section>
        </div>

        <style>
            @keyframes enter {
                from {
                    opacity: 0;
                    transform: translateY(2rem);
                }
                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }

            .stagger-1 {
                opacity: 0;
                animation: enter 1s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
            }

            .stagger-2 {
                opacity: 0;
                animation: enter 1s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
                animation-delay: 200ms;
            }

            .stagger-3 {
                opacity: 0;
                animation: enter 1s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
                animation-delay: 400ms;
            }
        </style>
    </div>
</Layout>
