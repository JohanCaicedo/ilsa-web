---
import Layout from "../layouts/Layout.astro";
import GradientText from "../components/atoms/GradientText.astro";
import Button from "../components/Button.astro"; // Using system Button instead of <a>
import { cn } from "../lib/utils";
---

<Layout title="404 - Página no encontrada" width="wide">
    <div
        class="flex flex-col items-center justify-center min-h-[60vh] py-20 px-4 text-center"
    >
        <!-- Replaced static H1 with GradientText for consistency -->
        <GradientText
            text="404 Not Found"
            size="text-5xl md:text-7xl"
            weight="font-black"
            from="var(--ilsa-blue-dark)"
            to="var(--ilsa-blue)"
            class="mb-6"
        />

        <!-- Adjusted divider color for Light Theme -->
        <div
            class="h-px w-80 max-w-full rounded bg-gradient-to-r from-slate-200 via-slate-400 to-slate-200 my-5 md:my-7 opacity-50"
        >
        </div>

        <!-- System text colors -->
        <p
            class="text-lg md:text-xl text-slate-500 max-w-lg text-center mb-10 text-balance"
        >
            La página que buscas no existe o ha sido movida a otra ubicación.
        </p>

        <!-- System Button component -->
        <Button href="/" variant="primary" class="rounded-full px-8 py-3">
            Volver al Inicio
        </Button>
    </div>
</Layout>
