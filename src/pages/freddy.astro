---
import { wpQuery } from "@/lib/wp";
import ArticleCard from "@/components/molecules/ArticleCard.astro";

// Corrección: Pasamos un objeto con la propiedad 'query'
const data = await wpQuery({
  query: `
    query GetFreddyPosts {
      posts(where: { categoryName: "freddy-ordonez-gomez" }, first: 12) {
        nodes {
          title
          slug
          uri      
          date
          excerpt
          categories {
            nodes {
              name
            }
          }
        }
      }
    }
  `
});

const posts = data?.posts?.nodes || [];
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <title>Freddy Ordóñez - ILSA</title>
    <meta name="viewport" content="width=device-width" />
  </head>
  <body class="bg-slate-50 min-h-screen p-8 font-sans">
    <div class="max-w-6xl mx-auto">
      
      <header class="mb-12 text-center">
        <h1 class="text-4xl font-extrabold text-slate-900 mb-2">Freddy Ordóñez Gómez</h1>
        <p class="text-slate-600">Columnista de Opinión</p>
      </header>

      {posts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {posts.map((post: any) => (
            <ArticleCard 
              title={post.title}
              excerpt={post.excerpt}
              date={post.date}
              uri={post.uri}
              category={post.categories?.nodes[0]?.name || "Opinión"}
            />
          ))}
        </div>
      ) : (
        <div class="text-center p-10 border border-dashed rounded-lg border-slate-300">
           <p class="text-red-500 font-bold">No se encontraron artículos.</p>
        </div>
      )}

    </div>
  </body>
</html>