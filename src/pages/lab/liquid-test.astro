---
import Layout from "../../layouts/Layout.astro";
import LiquidContainer from "../../components/experimental/LiquidContainer.astro";

// Datos de prueba para simular contenido real
const cards = [
    {
        title: "Refracción Pura",
        desc: "Este contenedor simula vidrio esmerilado con un spotlight que sigue tu mouse.",
        intensity: "high" as const,
    },
    {
        title: "Viscosidad Media",
        desc: "Un balance perfecto entre legibilidad y estética. Nota el borde brillante.",
        intensity: "medium" as const,
    },
    {
        title: "Toque Sutil",
        desc: "Apenas perceptible, ideal para capas secundarias o fondos complejos.",
        intensity: "low" as const,
    },
];
---

<Layout title="Laboratorio: Liquid Glass">
    <div
        class="min-h-screen w-full bg-neutral-950 px-4 py-20 relative overflow-hidden"
    >
        <!-- Background Decorativo (Orbes de color para probar la transparencia) -->
        <div
            class="absolute top-20 left-1/4 w-96 h-96 bg-blue-600/30 rounded-full blur-[128px] animate-pulse"
        >
        </div>
        <div
            class="absolute bottom-20 right-1/4 w-96 h-96 bg-purple-600/30 rounded-full blur-[128px] animate-pulse"
            style="animation-delay: 2s;"
        >
        </div>

        <div class="relative z-10 max-w-6xl mx-auto space-y-12">
            <div class="text-center space-y-4">
                <h1 class="text-5xl font-bold text-white tracking-tight">
                    Experimento: <span
                        class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400"
                        >Liquid Glass</span
                    >
                </h1>
                <p class="text-neutral-400 max-w-xl mx-auto">
                    Prueba de concepto de animaciones de alta fidelidad sin
                    librerías pesadas. Mueve el mouse sobre las tarjetas.
                </p>
            </div>

            <!-- Grid de Pruebas -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {
                    cards.map((card) => (
                        <LiquidContainer
                            intensity={card.intensity}
                            class="h-64 flex flex-col justify-center p-8"
                        >
                            <div class="space-y-4">
                                <div class="w-12 h-12 rounded-full bg-gradient-to-br from-white/20 to-transparent border border-white/10 flex items-center justify-center">
                                    <div class="w-6 h-6 bg-white rounded-full" />
                                </div>
                                <h3 class="text-2xl font-semibold text-white">
                                    {card.title}
                                </h3>
                                <p class="text-neutral-300 text-sm leading-relaxed">
                                    {card.desc}
                                </p>
                            </div>
                        </LiquidContainer>
                    ))
                }
            </div>

            <!-- Prueba de Contenedor Grande (Hero) -->
            <LiquidContainer
                intensity="medium"
                class="p-12 text-center space-y-6"
            >
                <h2 class="text-3xl text-white font-bold">
                    Integración Profunda
                </h2>
                <p class="text-neutral-300 max-w-2xl mx-auto">
                    Este componente es totalmente agnóstico. Puedes meter
                    imágenes, videos o formularios enteros dentro. La luz
                    siempre reaccionará a la posición del cursor relativa a ESTA
                    caja.
                </p>
                <button
                    class="px-6 py-2 rounded-full bg-white text-black font-semibold hover:scale-105 transition-transform"
                >
                    Probar Botón
                </button>
            </LiquidContainer>
        </div>
    </div>
</Layout>
